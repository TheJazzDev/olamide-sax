generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model admins {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model audios {
  id            Int      @id @default(autoincrement())
  title         String
  url           String
  platform      String
  description   String?
  display_order Int      @default(0)
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
}

model music {
  id            Int      @id @default(autoincrement())
  title         String
  platform      String
  url           String
  release_year  String?
  cover_url     String?
  display_order Int      @default(0)
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
}

model photos {
  id            Int      @id @default(autoincrement())
  title         String
  url           String
  alt           String?
  category      String?
  featured      Boolean  @default(false)
  display_order Int      @default(0)
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
}

model press {
  id            Int       @id @default(autoincrement())
  title         String
  source        String
  url           String?
  image_url     String?
  excerpt       String?
  published_at  DateTime?
  display_order Int       @default(0)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @default(now())
}

model site_settings {
  id            Int     @id @default(autoincrement())
  hero_title    String? @default("Olamide Sax")
  hero_subtitle String? @default("Vocalist • Saxophonist • Keyboardist")
  email         String? @default("Olaniyanolamidephillip@gmail.com")
  youtube_url   String?
  instagram_url String?
  facebook_url  String?
  twitter_url   String?
}

model videos {
  id            Int            @id @default(autoincrement())
  title         String
  url           String
  platform      String
  description   String?
  featured      Boolean        @default(false)
  display_order Int            @default(0)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @default(now())
  category      VideoCategory?
}

enum VideoCategory {
  SAXOPHONE
  VOCAL
  KEYBOARD
}
